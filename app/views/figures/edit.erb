<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br></br>
  <label>Choose an existing Title:</label>
  <br></br>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input><br />
  <%end%>
  <br></br>

  <label>Choose an existing landmark:</label>
  <br></br>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input><br />
  <%end%>
  <br></br>

  <label>and/or, create a new Landmark:</label>
  <br></br>

  <label>Landmark Name:</label>
    <input  type="text" name="landmark[name]" id="new_landmark"></input>
    <label>Year Completed:</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
  <br></br>

    <input type="submit" value="Edit Figure">

</form>
